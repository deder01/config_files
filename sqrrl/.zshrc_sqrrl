# sqrrl env
export SQRRL_HOME=$HOME/repos/sqrrl
export SQRRL_ANALYTICS=$SQRRL_HOME/analytics
export SQRRL_UI_MAIN=$SQRRL_WEB/ui/src/main
export SQRRL_WEB=$SQRRL_HOME/web
export SQRRL_BIN=$HOME/sqrrl/bin

# sqrrl front-end aliases
alias gocss="cd $SQRRL_UI_MAIN/styles/scss"
alias golib="cd $SQRRL_UI/js/lib" 
alias gotemplates="cd $SQRRL_UI_MAIN/js/templates"
alias gomain="cd $SQRRL_UI_MAIN" 
alias goweb="cd $SQRRL_WEB"
alias goui="cd $SQRRL_WEB/ui"

# other aliases
alias antrun="mvn clean antrun:run"
alias gosqrrl="cd $SQRRL_HOME" 
alias isu="is-stuff-up.sh"

# always use my sqrrl .ignore file for silver searcher
alias ag="ag --path-to-ignore $SQRRL_HOME/.ignore"

# locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# zookeeper
export ZOOKEEPER_HOME=/usr/local/lib/zookeeper-3.4.9
export ZOO_LOG_DIR=/var/log/zookeeper/

# java
export JAVA_HOME=`/usr/libexec/java_home -v 1.7`

# hadoop
export HADOOP_PREFIX=/usr/local/lib/hadoop-2.7.2
export HADOOP_HOME=/usr/local/lib/hadoop-2.7.2
export HADOOP_MAPRED_HOME=$HADOOP_PREFIX
export HADOOP_COMMON_HOME=$HADOOP_PREFIX
export HADOOP_HDFS_HOME=$HADOOP_PREFIX
export YARN_HOME=$HADOOP_PREFIX
export YARN_CONF_DIR=$HADOOP_PREFIX/etc/hadoop
export HADOOP_CONF_DIR=$HADOOP_PREFIX/etc/hadoop

export PATH=$HADOOP_PREFIX/sbin:$HADOOP_PREFIX/bin:$ZOOKEEPER_HOME/bin:$SQRRL_BIN:$SQRRL_ANALYTICS/bin:$SQRRL_HOME/tools/useful-scripts:$PATH
export ASSERTIONS_FLAG="-ea"

export MAVEN_OPTS="-Xms512m -Xmx2g -XX:MaxPermSize=256m"
# end sqrrl env
