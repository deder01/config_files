# sqrrl env
export SQRRL_ROOT=$HOME/repos/sqrrl
export SQRRL_HOME=$SQRRL_ROOT/analytics
export SQRRL_UI_MAIN=$SQRRL_WEB/ui/src/main
export SQRRL_WEB=$SQRRL_ROOT/web
export SQRRL_BIN=$HOME/sqrrl/bin
export SQRRL_ROOT_PASSWORD="secret"
export WORKPLACE=/workplace/eder

# sqrrl front-end aliases
alias gocss="cd $SQRRL_UI_MAIN/styles/scss"
alias golib="cd $SQRRL_UI_MAIN/js/lib" 
alias gotemplates="cd $SQRRL_UI_MAIN/js/templates"
alias gomain="cd $SQRRL_UI_MAIN" 
alias goweb="cd $SQRRL_WEB"
alias goui="cd $SQRRL_WEB/ui"
alias goworkplace="cd $WORKPLACE"

# other aliases
alias antrun="mvn clean antrun:run"
alias gosqrrl="cd $SQRRL_ROOT" 
alias goanalytics="cd $SQRRL_HOME" 
alias isu="is-stuff-up.sh"
alias complexity_report="/usr/local/bin/cr"

# locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# zookeeper
export ZOOKEEPER_HOME=/usr/local/Cellar/zookeeper/3.4.10
export ZOO_LOG_DIR=/var/log/zookeeper/

 #hadoop
export HADOOP_PREFIX=/usr/local/lib/hadoop-2.7.5
export HADOOP_HOME=/usr/local/lib/hadoop-2.7.5
export HADOOP_MAPRED_HOME=$HADOOP_PREFIX
export HADOOP_COMMON_HOME=$HADOOP_PREFIX
export HADOOP_HDFS_HOME=$HADOOP_PREFIX
export YARN_HOME=$HADOOP_PREFIX
export YARN_CONF_DIR=$HADOOP_PREFIX/etc/hadoop
export HADOOP_CONF_DIR=$HADOOP_PREFIX/etc/hadoop

export ASSERTIONS_FLAG="-ea"

export MAVEN_OPTS="-Xms512m -Xmx2g -XX:MaxPermSize=256m"
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python
# end sqrrl env
export PATH=$HOME/.toolbox/bin:$PATH

#AWS/BONES env variables
export GROUP_ARG="--posixGroup=awsmorocco-dev"
export BINDLE_ID="amzn1.bindle.resource.fmzrmgpyueg3ybxwhftq"
export POSIX_TEAM="awsmorocco-dev"
export MAIL_LIST="eder@amazon.com"
export PREFIX="MoroccoAccountManagement"
export ORGANIZATION="aws"
export ACCT_DATA_ARG="--account_id=556293316228"
