###### env ######
# basics
export REPOS=$HOME/repos
export SQRRL_HOME=$REPOS/sqrrl/
export UI_HOME=$REPOS/sqrrl/web/ui/src/main/
export WEB_HOME=$REPOS/sqrrl/web/
export SQRRL_CONFIG=$REPOS/sqrrl/

# locale
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8

# zookeeper
export ZOOKEEPER_HOME=/usr/local/lib/zookeeper-3.4.9
export ZOO_LOG_DIR=/var/log/zookeeper/

# java
export JAVA_HOME=`/usr/libexec/java_home -v 1.7`

# hadoop
export HADOOP_PREFIX=/usr/local/lib/hadoop-2.7.2
export HADOOP_HOME=/usr/local/lib/hadoop-2.7.2
export HADOOP_MAPRED_HOME=$HADOOP_PREFIX
export HADOOP_COMMON_HOME=$HADOOP_PREFIX
export HADOOP_HDFS_HOME=$HADOOP_PREFIX
export YARN_HOME=$HADOOP_PREFIX
export YARN_CONF_DIR=$HADOOP_PREFIX/etc/hadoop
export HADOOP_CONF_DIR=$HADOOP_PREFIX/etc/hadoop

export PATH=$HADOOP_PREFIX/sbin:$HADOOP_PREFIX/bin:$ZOOKEEPER_HOME/bin:$SQRRL_HOME/analytics/bin:$PATH
export ASSERTIONS_FLAG="-ea"

export MAVEN_OPTS="-Xms512m -Xmx2g -XX:MaxPermSize=256m"
###### end env ######

###### aliases ######
# navigation
alias gosqrrl="cd $SQRRL_HOME" 
alias goui="cd $UI_HOME" 
alias goweb="cd $WEB_HOME" 

# server
alias setup-server="sudo bash $SQRRL_CONFIG/setup-server.sh"
alias add-data="cd $SQRRL_HOME/systemtest && mvn verify -Dremote.ip=localhost -DdoDetectorGen"
###### end aliases ######

# docker
export DOCKER_HOST="tcp://${USER}-docker.sqrrl-lab.net:2375"
###### end docker ######
